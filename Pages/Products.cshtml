@page
@model ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h1>Products</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Stock</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-page="/AddProduct" class="btn btn-primary mt-3">Add Product</a>
</div>
