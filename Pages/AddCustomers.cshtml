@page
@model CoffeeShopManagementApp.Pages.AddCustomerModel
@{
    ViewData["Title"] = "Add Customer";
}

<div class="container mt-5">
    <h1>Add Customer</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="Name" class="form-label">Customer Name</label>
            <input type="text" asp-for="NewCustomer.Name" class="form-control" />
            <span asp-validation-for="NewCustomer.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" asp-for="NewCustomer.Email" class="form-control" />
            <span asp-validation-for="NewCustomer.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Customer</button>
        <a asp-page="/Customers" class="btn btn-secondary">Cancel</a>
    </form>
</div>
