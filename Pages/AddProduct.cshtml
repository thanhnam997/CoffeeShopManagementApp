@page
@model CoffeeShopManagementApp.Pages.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <h1>Add Product</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="Name" class="form-label">Product Name</label>
            <input type="text" asp-for="NewProduct.Name" class="form-control" />
            <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="number" asp-for="NewProduct.Price" class="form-control" step="0.01" />
            <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Stock" class="form-label">Stock</label>
            <input type="number" asp-for="NewProduct.Stock" class="form-control" />
            <span asp-validation-for="NewProduct.Stock" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
        <a asp-page="/Products" class="btn btn-secondary">Cancel</a>
    </form>
</div>
