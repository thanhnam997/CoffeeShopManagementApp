@page
@model CoffeeShopManagementApp.Pages.AddOrderModel
@{
    ViewData["Title"] = "Add Order";
}

<div class="container mt-5">
    <h1>Add Order</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success">@Model.Message</div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="CustomerId" class="form-label">Customer</label>
            <select asp-for="NewOrder.CustomerId" class="form-select">
                <option value="">-- Select a Customer --</option>
                @foreach (var customer in Model.Customers)
                {
                    <option value="@customer.Id">@customer.Name</option>
                }
            </select>
            <span asp-validation-for="NewOrder.CustomerId" class="text-danger"></span>
        </div>

        <h3>Select Products</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SelectedProducts.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" asp-for="SelectedProducts[@i].Selected" />
                        </td>
                        <td>@Model.SelectedProducts[i].ProductName</td>
                        <td>@Model.SelectedProducts[i].Price.ToString("C")</td>
                        <td>
                            <input type="number" asp-for="SelectedProducts[@i].Quantity" class="form-control" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Add Order</button>
        <a asp-page="/Orders" class="btn btn-secondary">Cancel</a>
    </form>
</div>
